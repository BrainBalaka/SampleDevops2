@model SampleDevops.Areas.Admin.Models.OrderViewModel
@{
    ViewData["Title"] = "Create Order";
}
<h2>@ViewData["Title"]</h2>
<form method="post">
    <div class="form-group row">
        <label asp-for="OrderDate" class="col-form-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="OrderDate" type="date" class="form-control" />
            <span asp-validation-for="OrderDate" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="CustomerId" class="col-form-label col-md-2"></label>
        <div class="col-md-10">
            <span asp-validation-for="CustomerId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ProductsIds" class="col-form-label col-md-2"></label>
        <div class="col-md-10">
            <span asp-validation-for="ProductsIds" class="text-danger"></span>
        </div>
    </div>

     <input type="submit" value="Save" class="btn btn-primary" />
</form>
<div>
